@page "/exam-details.html"
@model PortalApp.Pages.Exams.ExamDetailsModel
@{
    ViewData["Title"] = "Chi tiết bài làm";
}
<!-- ================================
    START BREADCRUMB AREA
================================= -->
<section class="breadcrumb-area">
    <div class="bg-white py-3 pattern-bg">
        <div class="container">
            <div class="breadcrumb-content">
                <ul class="quiz-nav d-flex flex-wrap align-items-center">
                    <li><a href="/exams.html"><i class="la la-arrow-left mr-2"></i>Quay lại Bài kiểm tra</a></li>
                    <li>
                        <div class="d-flex align-items-center">
                            <a href="/exam-details.html?id=@(Model.Exam.Id)">
                                <img src="/images/angular.png" alt="Angular thumbnail">
                            </a>
                            <p>
                                <a href="/exam-details.html?id=@(Model.Exam.Id)">@Model.Exam.Name</a><span class="d-block fs-13">@Model.Exam.ShortDesc</span>
                            </p>
                        </div>
                    </li>
                </ul>
            </div><!-- end breadcrumb-content -->
        </div><!-- end container -->
    </div>
    <div class="bg-dark pt-60px pb-60px">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 responsive-column-half">
                    <div class="quiz-result-content text-center">
                        <p class="section__desc text-white-50 pb-2">Mức độ</p>
                        <h2 class="section__title text-white">@(Model.Exam.Level == Examination.Shared.Enums.Level.Difficult ? "Khó" : Model.Exam.Level == Examination.Shared.Enums.Level.Medium ? "Trung bình" : "Dễ")</h2>
                    </div>
                </div><!-- end col-lg-3 -->
                <div class="col-lg-3 responsive-column-half">
                    <div class="quiz-result-content text-center">
                        <p class="section__desc text-white-50 pb-2">Số câu hỏi</p>
                        <h2 class="section__title text-white">@Model.Exam.NumberOfQuestions</h2>
                    </div>
                </div><!-- end col-lg-3 -->
                @if (Model.Exam.IsTimeRestricted)
                {
                    <div class="col-lg-3 responsive-column-half">
                        <div class="quiz-result-content text-center">
                            <p class="section__desc text-white-50 pb-2">Thời gian làm bài (phút)</p>
                            <h2 class="section__title text-white">@Model.Exam.Duration</h2>
                        </div>
                    </div><!-- end col-lg-3 -->
                }

                <div class="col-lg-3 responsive-column-half">
                    <div class="quiz-result-content text-center">
                        <a href="#" class="btn theme-btn theme-btn-transparent text-white-50">
                            <span class="la la-tachometer d-block fs-30 lh-40"></span>
                            Hiển thị hẹn giờ
                        </a>
                    </div>
                </div><!-- end col-lg-3 -->
            </div><!-- end row -->
        </div><!-- end container -->
    </div>
</section><!-- end breadcrumb-area -->
<!-- ================================
    END BREADCRUMB AREA
================================= -->
<!-- ================================
       START QUIZ ANS AREA
================================= -->
<section class="quiz-ans-wrap pt-80px pb-80px">
    <div class="container">
@*        <div class="section-heading text-center">
            <h2 class="section__title">How do you compare?</h2>
        </div><!-- end section-heading -->*@
        <div class="row pt-50px">
            <div class="col-12">
                <div class="click-to-start-btn-box text-center pt-3">
                    <form method="post">
                        <button class="btn theme-btn" type="submit">Làm bài</button>
                    </form>
                </div>
            </div>
        </div><!-- end row -->
    </div><!-- end container -->
</section>
<!-- ================================
       START QUIZ ANS AREA
================================= -->
